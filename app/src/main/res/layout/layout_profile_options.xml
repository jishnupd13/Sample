<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageOption"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="14dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageArrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_arrow_forward"
        />

    <com.stark.storeapp.utils.customtextview.StoreAppCustomTextView
        android:id="@+id/textOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imageOption"
        app:layout_constraintBottom_toBottomOf="@+id/imageOption"
        app:layout_constraintStart_toEndOf="@+id/imageOption"
        app:layout_constraintEnd_toStartOf="@+id/imageArrow"
        android:layout_marginHorizontal="14dp"
        app:fontType="semiBold"
        android:textColor="@color/colorGrey"
        tools:text="Terms And conditions"
        />

</androidx.constraintlayout.widget.ConstraintLayout>